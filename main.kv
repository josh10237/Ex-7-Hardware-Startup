<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        text: ("Off")
        id: toggle_motor
        size: 100, 100
        font_size: 30
        x: root.width * 0.5
        y:root.height * 0.75
        color: 1, 0, 0, 1
        on_press: root.togglePressed(self.text)