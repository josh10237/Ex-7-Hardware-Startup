<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None


    DPEAButton:
        text: "X"
        font_size: 20
        size: 60, 60
        x: root.width * .97
        y:root.height * .96
        color: 1, 0, 0, 1
        on_press: root.cleanup()
    DPEAButton:
        id:toggle_servo_switch
        text: "Direction Switch Off"
        size: 400, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.toggleServoSwitch()
    DPEAButton:
        text: ("Servo Move")
        id: servo
        size: 400, 100
        font_size: 15
        x: root.width * 0.25
        y:root.height * 0.3
        color: 0, 0, 1, 1
        on_press: root.servoPressed()
    DPEAButton:
        id:toggle_talon_switch
        text: "Stop Switch Off"
        size: 400, 100
        x: root.width * 0.5
        y:root.height * 0.5
        color: 1, 1, 0, 1
        on_press: root.toggleTalonSwitch()
    DPEAButton:
        id:toggle_proximity
        text: "Proximity Switch Off"
        size: 400, 100
        x: root.width * 0.5
        y:root.height * 0.3
        color: 1, 0, 1, 1
        on_press: root.togglePromixmity()
