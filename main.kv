<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        text: ("On")
        id: toggle_text
        size: 100, 100
        font_size: 30
        x: root.width * 0.5
        y:root.height * 0.75
        color: 1, 0, 0, 1
        on_press: root.togglePressed(self.text)

    DPEAButton:
        text: ("Clockwise")
        id: toggle_dir_text
        size: 300, 80
        font_size: 18
        x: root.width * 0.4
        y: root.height * 0.35
        color: 1, 0, 0, 1
        on_press: root.toggleDirPressed(self.text)

    DPEAButton:
        text: ("Preset")
        id: toggle_dir_text
        size: 100, 100
        font_size: 18
        x: root.width * .93
        y: root.height * .9
        color: 1, 0, 0, 1
        on_press: root.presetPressed(self.text)

    Slider:
        id: slider
        size_hint_x: .33
        size_hint_y: .25
        x: root.width * 0.33
        y: 0
        min: 1
        max: 100
        step: 1
        on_touch_move: root.MotorOn()
        orientation: 'horizontal'

    Label:
        text: "Speed: "+str(slider.value)
        size: 100, 100
        font_size: 30
        pos_hint:{"y":-.3,"x": 0}
        color: 0, 0, 0, .5

    Label:
        text: "Direction"
        size: 100, 100
        font_size: 30
        pos_hint:{"y": 0,"x": 0}
        color: 0, 0, 0, .5

    Label:
        text: "Position: "+ self.posCurrent
        id: pos_label
        size: 100, 100
        font_size: 30
        pos_hint:{"y": .9,"x": .9}
        color: 0, 0, 0, .5